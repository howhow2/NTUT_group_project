<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="RtlHardcoded">

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="計算機(基本運算)"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:text="問題:"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_description" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:text="答案:"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_input" />

    <EditText
        android:id="@+id/ed_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="按Enter進行運算"
        android:importantForAutofill="no"
        android:inputType="text"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textDirection="ltr"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/ed_output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint=""
        android:importantForAutofill="no"
        android:inputType="text"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textDirection="ltr"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/btn_no1"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#4CAF50"
        android:text="1"
        android:textAlignment="center"
        android:textSize="15sp"
        android:onClick="btn1_OnClick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_no4" />

    <Button
        android:id="@+id/btn_no2"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#4CAF50"
        android:text="2"
        android:textAlignment="center"
        android:textSize="15sp"
        android:onClick="btn2_OnClick"
        app:layout_constraintStart_toEndOf="@+id/btn_no1"
        app:layout_constraintTop_toBottomOf="@+id/btn_no5" />

    <Button
        android:id="@+id/btn_no3"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#4CAF50"
        android:text="3"
        android:textAlignment="center"
        android:textSize="15sp"
        android:onClick="btn3_OnClick"
        app:layout_constraintStart_toEndOf="@+id/btn_no2"
        app:layout_constraintTop_toBottomOf="@+id/btn_no6" />

    <Button
        android:id="@+id/btn_no4"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#4CAF50"
        android:text="4"
        android:textAlignment="center"
        android:onClick="btn4_OnClick"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_no7" />

    <Button
        android:id="@+id/btn_no5"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#4CAF50"
        android:text="5"
        android:textAlignment="center"
        android:textSize="15sp"
        android:onClick="btn5_OnClick"
        app:layout_constraintStart_toEndOf="@+id/btn_no4"
        app:layout_constraintTop_toBottomOf="@+id/btn_no8" />

    <Button
        android:id="@+id/btn_no6"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#4CAF50"
        android:text="6"
        android:textAlignment="center"
        android:textSize="15sp"
        android:onClick="btn6_OnClick"
        app:layout_constraintStart_toEndOf="@+id/btn_no5"
        app:layout_constraintTop_toBottomOf="@+id/btn_no9" />

    <Button
        android:id="@+id/btn_no7"

        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="70dp"
        android:backgroundTint="#4CAF50"
        android:text="7"
        android:textAlignment="center"
        android:textSize="15sp"
        android:onClick="btn7_OnClick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_output" />

    <Button
        android:id="@+id/btn_no8"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="70dp"
        android:backgroundTint="#4CAF50"
        android:text="8"
        android:textAlignment="center"
        android:textSize="15sp"
        android:onClick="btn8_OnClick"
        app:layout_constraintStart_toEndOf="@+id/btn_no7"
        app:layout_constraintTop_toBottomOf="@+id/ed_output" />

    <Button
        android:id="@+id/btn_no9"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="70dp"
        android:backgroundTint="#4CAF50"
        android:text="9"
        android:textAlignment="center"
        android:textSize="15sp"
        android:onClick="btn9_OnClick"
        app:layout_constraintStart_toEndOf="@+id/btn_no8"
        app:layout_constraintTop_toBottomOf="@+id/ed_output" />

    <Button
        android:id="@+id/btn_no0"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="0"
        android:textAlignment="center"
        android:backgroundTint="#4CAF50"
        android:textSize="15sp"
        android:onClick="btn0_OnClick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_no1" />

    <Button
        android:id="@+id/btn_dp"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="."
        android:textAlignment="center"
        android:backgroundTint="#4CAF50"
        android:textSize="20sp"
        android:onClick="btnDP_OnClick"
        app:layout_constraintStart_toEndOf="@+id/btn_no0"
        app:layout_constraintTop_toBottomOf="@+id/btn_no2" />

    <Button
        android:id="@+id/btn_negative"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:text="(-)"
        android:textAlignment="center"
        android:backgroundTint="#4CAF50"
        android:textSize="15sp"
        android:onClick="btnNeg_OnClick"
        app:layout_constraintStart_toEndOf="@+id/btn_dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_no3"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btn_exe"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="150dp"
        android:backgroundTint="#F44336"
        android:onClick="btnEnter_OnClick"
        android:text="Enter"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/btn_minus"
        app:layout_constraintTop_toBottomOf="@+id/btn_cleanAll" />

    <Button
        android:id="@+id/btn_plus"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="70dp"
        android:onClick="btnPlus_OnClick"
        android:drawableLeft="@drawable/plus_sign"
        android:paddingStart="0dip"
        android:paddingEnd="0dip"
        app:layout_constraintLeft_toRightOf="@+id/btn_no9"
        app:layout_constraintTop_toBottomOf="@+id/ed_output" />

    <Button
        android:id="@+id/btn_minus"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:onClick="btnMinus_OnClick"
        android:drawableLeft="@drawable/minus_sign"
        android:paddingStart="0dip"
        android:paddingEnd="0dip"
        app:layout_constraintLeft_toRightOf="@+id/btn_no6"
        app:layout_constraintTop_toBottomOf="@+id/btn_plus" />

    <Button
        android:id="@+id/btn_multiply"
        android:layout_width="45dp"
        android:layout_height="45dp"

        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:onClick="btnMultiply_OnClick"
        android:drawableLeft="@drawable/multiply_sign"
        android:paddingStart="0dip"
        android:paddingEnd="0dip"
        app:layout_constraintLeft_toRightOf="@+id/btn_no3"
        app:layout_constraintTop_toBottomOf="@+id/btn_minus" />

    <Button
        android:id="@+id/btn_divide"
        android:layout_width="45dp"
        android:layout_height="45dp"

        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:onClick="btnDivide_OnClick"
        android:drawableLeft="@drawable/divide_sign"
        android:paddingStart="0dip"
        android:paddingEnd="0dip"
        app:layout_constraintLeft_toRightOf="@+id/btn_negative"
        app:layout_constraintTop_toBottomOf="@+id/btn_multiply"
         />

    <Button
        android:id="@+id/btn_backspace"
        android:layout_width="146dp"
        android:layout_height="42dp"
        android:layout_marginStart="30dp"

        android:layout_marginTop="10dp"
        android:onClick="btnBP_OnClick"
        android:text="Backspace"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/btn_closeBracket"
        app:layout_constraintTop_toBottomOf="@+id/ed_output" />

    <Button
        android:id="@+id/btn_cleanAll"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Clear"
        android:onClick="btnCA_OnClick"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/btn_minus"
        app:layout_constraintTop_toBottomOf="@+id/btn_backspace" />
    <Button
        android:id="@+id/btn_game1"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Game1"
        android:onClick="btnCA_OnClick"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/btn_multiply"
        app:layout_constraintTop_toBottomOf="@+id/btn_cleanAll" />
    <Button
        android:id="@+id/btn_game2"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Game2"
        android:onClick="btnCA_OnClick"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/btn_multiply"
        app:layout_constraintTop_toBottomOf="@+id/btn_game1" />
    <Button
        android:id="@+id/btn_openBracket"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="#4CAF50"
        android:onClick="btnOpenBracket_OnClick"
        android:text="("
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_output" />

    <Button
        android:id="@+id/btn_closeBracket"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="#4CAF50"
        android:onClick="btnCloseBracket_OnClick"
        android:text=")"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_output" />

</androidx.constraintlayout.widget.ConstraintLayout>